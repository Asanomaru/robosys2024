#!/usr/bin/python3

import sys

if len(sys.argv) > 1:
    input_text = " ".join(sys.argv[1:])
else:
    input_text = sys.stdin.read().strip()

if not input_text:
    print("入力なし")
else:
    character_count = len(input_text)
    word_count = len(input_text.split())

    print("入力された文字数は{}文字です。".format(character_count))
    print("入力された単語数は{}単語です。".format(word_count))
